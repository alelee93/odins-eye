<!DOCTYPE html>
<html>
  <head>
    <title>OdinsEye</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "custom.css" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="bg-dusty-rose">
    <div class="container">
    <h1>403</h1>
    </div>
    <div class="container">
        <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>" role="alert"><%= sanitize value %></div>
        <% end %>
        <% clear_flash %>
    </div>
    <%= image_tag "error_pages/lion.jpg", class: "img-responsive", style: "width: 100%" %>
    <p>Photo by Geran de Klerk on Unsplash</p>
</body>
</html>