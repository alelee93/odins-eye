    <div class="row">
        <div class="col-sm-3">
            <p class="inline"><%= genius(topic) %></p>
        </div>
        <div class="col-sm-3">
            <p class="inline"><%= likes(topic) %></p>
        </div>
        <div class="col-sm-3">
            <p class="inline"><%= dislikes(topic) %></p>
        </div>
        <div class="col-sm-3">
