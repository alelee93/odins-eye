<div class="row">
    <div class="col-sm-1">
        <div class="">
        </div>
    </div>
    <div class="col-sm-10">
        <div class="row border bg-offwhite shadow-sm">
            <div class="col-md-3">

                <div class="fill d-flex image-flex align-items-center justify-content-middle flex-direction-col">

                    <div class="rounded-circle shadow">
                        <%= render "users/profile_avatar", user: @user%>
                    </div>
                    <h6>Contact</h6>
                    <div class="justify-content-left">
                        <div class="bottom-space-sm">
                            <%= render('users/contact_info', type: "Email", info: @user.email, link: false) unless @user.display_email %>
                        </div>
                        <div class="d-flex justify-content-around bottom-space-md">
                            <%= render('users/social_media', type: :facebook, url: @user.facebook_url) if @user.facebook_url  %>
                            <%= render('users/social_media', type: :github, url: @user.github_url) if @user.github_url  %>
                            <%= render('users/social_media', type: :linkedin, url: @user.github_url) if @user.linkedin_url  %>
                        </div>
                    </div>
                </div>

            
            </div>   
            <div class="col-md-8">
                <div class="d-flex align-center justify-content-center fill flex-direction-col">
                    <h1 class="profile-namecolor-charcoal bold primary-text align-self-center"><%= @user.name %></h1>
                    <p class="color-charcoal small-text thin-text"><strong></strong><%= @user.bio %></p>
                </div>            
            </div> 
            <div class="col-md-1">
                <div class="fill d-flex align-center justify-content-center flex-direction-col">
                    <%= render 'users/follow_user_button', small: false, user: @user, following_color: "bg-aqua", not_following_color: "bg-offwhite border", followed: current_user.following?(@user) %>
                </div>
            </div>   
        </div>
    </div>
    <div class="col-sm-1">
        <div class="">
            
        </div>
    </div>
</div>