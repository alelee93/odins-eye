<%= form_for(@user, html: {class: 'form-signin width-half'}) do |f| %>
    <div text-center mb-4>
        <h1 class="h3 mb-2 font-weight-normal">Create Account</h1>    
    </div>

    <div class="form-label-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
        <%= f.label :name%> 
        <%= error_msg_for(@user, :name).html_safe %>
    </div>
    <div class="form-label-group">
        <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
        <%= f.label :email %>
        <%= error_msg_for(@user, :email).html_safe %>
     </div>
    <div class="form-label-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        <%= f.label :password%>
        <small>8-20 characters, 1 capital letter, 1 lower case, and 1 symbol</small>
        <%= error_msg_for(@user, :password).html_safe %>
    </div>
    <div class='form-label-group'>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
        <%= f.label :pasword_confirmation, "Confirm Password" %>
        <%= error_msg_for(@user, :password_confirmation).html_safe %>
    </div>
    <%= f.submit 'Sign Up', class: 'btn btn-lg btn-primary btn-block'%>

    <div class="container top-space center">
        <a href="/auth/google_oauth2" ><%= image_tag "logo_icons/btn_google_signin_light_normal_web.png", class: "img-responsive", style: "" %></a>
    </div>
<% end %>

