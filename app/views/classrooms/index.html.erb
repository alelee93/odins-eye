

<div class="row">
    <div class="col-md-4">
        <h4>Filter by tag</h4>
        <%= form_tag(classrooms_path , method: :get) do%>
                <div class="form-row">
                    <%= text_field_tag :tag_name, nil, class: "form-control", list: "user-name"%>
                    <datalist id="user-name">
                        <% @tag_types.each do |tag_type| %>
                            <option value="<%= tag_type.name %>" class="thin-text">
                            </option>
                        <% end %>
                    </datalist>
                </div>
                <div class="form-row top-space-sm bottom-space-lg">
                    <%= submit_tag "Filter", class: "btn btn-primary bg-lavender border-lavender"%>
                </div>
            
            <% end %>

    </div>

    <div class="col-md-8">
        <% if !!@tag_type %>
            <%= topic_list_header(@tag_type) %>
        <% end %>
        <% if @classrooms.length == 0 %>
            <h3 class="text-center">There are no classrooms</h3>
        <% end %>
        <% @classrooms.each do |classroom| %>
            <div class="bottom-space-md">
                <%= render 'classrooms/summary', classroom: classroom %>
            </div>
        <% end %>
    
    </div>

</div>

