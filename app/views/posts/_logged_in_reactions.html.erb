<div class="row reaction-holder no-padding">
    <div class="col-sm-4 no-padding" id="post-reactions-<%= post.id%>">

        <%= link_to(genius(post, genius_color, 'charcoal', 'md-14'), create_post_reaction_path(post, ReactionType::ID[:genius]), class: 'reaction post-reaction') %>
        <%= link_to(likes(post, like_color, 'charcoal', 'md-14'), create_post_reaction_path(post, ReactionType::ID[:like]), class: 'reaction post-reaction')%>
        <%= link_to(dislikes(post, dislike_color, 'charcoal', 'md-14'), create_post_reaction_path(post, ReactionType::ID[:dislike]), class: 'reaction post-reaction')%>
    
    </div>

    <%= post_report_dropdown(post) %>

    <div class="col-sm-1 no-padding">
        <%= reply(new_post_reply_path(post), 'aqua', 'aqua', 'md-14')%>   
    </div>
</div>


