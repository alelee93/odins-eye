<a name="message-form"></a>
<%= form_for([user, message]) do |f| %>
    <div class="form-group post-field-container">
        <%= f.text_area :content, placeholder: "Your message to #{user.name}...", class: "form-control message-form-text-field" %>
    </div>
    <div class="form-group">
        <%= f.submit "Send Message", class: "btn btn-primary bg-lavender border-lavender btn-sm" %>
   </div>
<% end %>